{
  "name": "pluginblueprint",
  "version": "0.0.1",
  "description": "UI to create Bukkit/Spigot plugins",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-packager . --out=dist/win --platform=win32 --arch=x64 --icon=assets/images/favicon.ico --asar=true --overwrite",
    "setup": "electron-installer-windows --config setupConfig.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "files": [
    "**/*",
    "data",
    "assets",
    "*.js",
    "*.html"
  ],
  "build": {
    "appId": "org.inventivetalent.pluginblueprint",
    "productName": "PluginBlueprint",
    "copyright": "Copyright © 2018 Haylee Schäfer",
    "directories": {
      "output": "dist/out"
    },
    "files":[
      "**/*",
      "data/*",
      "node_modules/litegraph.js/css/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "fileAssociations": [
      {
        "ext": "pbp",
        "name": "PluginBlueprint Project",
        "description": "PluginBlueprint Project",
        "icon": "build/icon.ico"
      },
      {
        "ext": "pbg",
        "name": "PluginBlueprint Graph",
        "description": "PluginBlueprint Graph",
        "icon": "build/icon.ico"
      }
    ]
  },
  "author": "Haylee Schäfer",
  "license": "GNU LGPLv3",
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4",
    "electron-installer-windows": "^1.1.0",
    "electron-packager": "^12.2.0"
  },
  "dependencies": {
    "electron-prompt": "^1.2.0",
    "fs-extra": "^7.0.0",
    "jquery": "^3.3.1",
    "litegraph.js": "../litegraph.js/",
    "node-notifier": "^5.3.0"
  }
}
